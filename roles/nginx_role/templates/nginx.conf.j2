worker_processes 1;

events {}

http {
    server {
        listen 80;
        server_name localhost;

        location / {
            root /usr/share/nginx/html;
            index index.html;
        }

        # Welcome message
        location /welcome {
            return 200 'Welcome to Nginx, served by Ansible, made by Artem Yermolaiev!';
            add_header Content-Type text/plain;
        }
    }
}
